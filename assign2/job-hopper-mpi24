#PBS -V
#PBS -l mppwidth=120
#PBS -l mppnppn=24
#PBS -l mppdepth=1
#PBS -l walltime=0:02:00
#PBS -o mpi24.stdout
#PBS -j oe

cd $PBS_O_WORKDIR
aprun -d 1 -n 120 -N 24 ./mpi -n 500
aprun -d 1 -n 120 -N 24 ./mpi -n 1000
aprun -d 1 -n 120 -N 24 ./mpi -n 5000
aprun -d 1 -n 120 -N 24 ./mpi -n 10000
aprun -d 1 -n 120 -N 24 ./mpi -n 40000
aprun -d 1 -n 120 -N 24 ./mpi -n 100000
aprun -d 1 -n 120 -N 24 ./mpi -n 1000000

aprun -d 1 -n 120 -N 24 ./mpi -n 10000 -o mpi10000.txt
